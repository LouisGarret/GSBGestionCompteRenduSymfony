{% extends 'base.html.twig' %}

{% block title %}Connexion {% endblock %}

{% block fos_user_content %}


    <div class="container">
        <div class="row mt-3">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="jumbotron py-3 px-3">
                    <h1>Connexion</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">Email ou mot de passe incorrect</div>
                    {% endif %}

                    <form action="{{ path('fos_user_security_login') }}" method="post" class="mt-3">

                        <div class="form-group">
                            <label for="email">Email</label>
                            <input placeholder="Adresse email ..." required name="_username" id="email" type="text" class="form-control" value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input placeholder="Mot de passe ..." required name="_password" id="password" type="password" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}


