{% trans_default_domain 'FOSUserBundle' %}
{% extends 'base.html.twig' %}

{% block title %}Connexion {% endblock %}

{% block fos_user_content %}

    <div class="container">
        <div class="row mt-3">
            <div class="col-md-3">&nbsp;</div>
            <div class="col-md-6">
                <div class="jumbotron py-3 px-3">
                    <h1>Connexion</h1>
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form action="{{ path("fos_user_security_check") }}" method="post" class="mt-3">

                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" required="required" autocomplete="username" />
                        </div>
                        <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" class="form-control" required="required" autocomplete="current-password" />
                        </div>
                        <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                        </div>
                        <div class="form-group">
                        <input type="submit" id="_submit" class="btn btn-outline-primary" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}


{% block menu %}

{% endblock %}